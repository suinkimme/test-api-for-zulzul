{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "@react-native-community",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-shadow": ["error"],
    "no-shadow": "off",
    "no-undef": "off"
  },
  "ignorePatterns": ["dist/", "node_modules/"]
}
